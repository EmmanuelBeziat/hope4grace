[data-tooltip]
	position relative

	&::before
		content attr(data-tooltip)
		position absolute
		opacity 0
		visibility hidden
		transform translate(-50%, 50%)
		transition .25s ease
		background $color-white
		color $color-black
		font-size rem(14px)
		padding .5em
		left 50%
		bottom -5px
		min-width rem(196px)
		z-index 10
		text-align center
		line-height 1.5
		pointer-events none

	&:hover
	&:focus
		&::before
			opacity 1
			visibility visible
			transform translate(-50%, 100%)

[data-tooltip-position="top"]
	&::before
		bottom auto
		top -5px
		transform translate(-50%, -50%)

	&:hover
	&:focus
		&::before
			transform translate(-50%, -100%)
